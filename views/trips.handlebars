<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Trips</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Your Trips</h1>
  </header>
  <main>
    {{#if trips.length}}
      <ul>
        {{#each trips}}
          <li data-trip-id="{{this.id}}" data-trip-destination="{{this.destination}}">
            <h2>{{this.trip_name}}</h2>
            <p>From: {{this.trip_origin}} to {{this.destination}}</p>
            <p>Date: {{this.start_date}} - {{this.end_date}}</p>
            <p>Budget: ${{this.budget}}</p>
            <div id="poi-{{this.id}}">
              <h3>Top Attractions</h3>
              <ul></ul>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You have no trips planned.</p>
    {{/if}}
  </main>
  <script src="/js/main.js"></script>
</body>
</html>
